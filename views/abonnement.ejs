<section class="features-container">
    <div class="feature-item">
        <img src="../images/product-2.jpg" alt="Paiement sécurisé">
        <p>Paiement sécurisé</p>
    </div>
    <div class="feature-item">
        <img src="../images/product-1.jpg" alt="Qualité prix">
        <p>Qualité prix</p>
    </div>
    <div class="feature-item">
        <img src="../images/user-3.jpg" alt="100% Satisfait">
        <p>100% Satisfait</p>
    </div>
    <div class="feature-item">
        <img src="../images/user-2.jpg" alt="Recommandez">
        <p>Recommandez</p>
    </div>
</section>
<section class="video-container" aria-label="Vidéo explicative">
    <iframe 
        width="560" 
        height="315" 
        src="https://www.youtube.com/embed/_o4y3LO_Xhw" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
